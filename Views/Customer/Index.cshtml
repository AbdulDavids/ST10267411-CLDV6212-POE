@model IEnumerable<CLDV6212_POE.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<h2 class="my-4">Customer List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary mb-4" })
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="mb-3">
        <label for="searchTerm" class="form-label">Search by Name:</label>
        <input type="text" name="searchTerm" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Contact Info</th>
                <th scope="col">Product Data</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ContactInfo</td>
                    <td>@item.ProductData</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }, new { @class = "btn btn-sm btn-warning" }) |
                        @Html.ActionLink("Delete", "Delete", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h2 {
        color: #343a40;
    }

    .table {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table thead th {
        background-color: #343a40;
        color: #ffffff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .table-responsive {
        margin-top: 20px;
    }
</style>
